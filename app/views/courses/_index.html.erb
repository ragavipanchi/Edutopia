<table id="courses" class="table-data table table-striped table-bordered" cellspacing="0" width="100%">
  <thead class="default-color">
    <tr>
      <th>Course name</th>
      <th>Course description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.course_description %></td>
        <td><%= link_to 'Show', course, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-default"  %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-default"%>
